{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}
    
    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'entity')|lower }}</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.name'|trans({}, 'entity')|lower }}</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_entity_edit', {'id': entity.id}) }}" title="{{ 'action.edit_entity'|trans({}, 'entity') }}" class="btn btn-success">{{ 'action.edit_entity'|trans({}, 'entity') }}</a>
            <a href="{{ path('app_admin_entity_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/entity/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
